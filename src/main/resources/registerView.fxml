<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.RegisterController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="-2.0" prefHeight="434.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="587.0" text="Register" textAlignment="CENTER" />
            <TextField fx:id="usernameField" onAction="#onUsernameFieldChange" promptText="username" />
            <TextField promptText="password" />
            <TextField promptText="confirm password" />
            <TextField promptText="nickname" />
            <TextField promptText="slogan" />
            <TextField promptText="email" />
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="291.0" text="Random password" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="314.0" text="Random slogan" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="188.0" text="Register" />
            <HBox alignment="CENTER" prefHeight="34.0" prefWidth="600.0">
               <children>
                  <Label text="Already got an account?  " />
                  <Button mnemonicParsing="false" text="Log in" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></VBox>
   </children>
</AnchorPane>
