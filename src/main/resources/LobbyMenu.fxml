   <VBox fx:id="games" layoutX="356.0" layoutY="114.0" prefHeight="200.0" prefWidth="248.0" />
   <Button fx:id="leave" layoutX="240.0" layoutY="64.0" mnemonicParsing="false" onAction="#leave" text="Leave" />
